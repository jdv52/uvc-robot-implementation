<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <link name="base_link"/>

    <!-- CHASSIS -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.144 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.144 0 0.038"/>
            <geometry>
                <box size="0.096 0.168 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.144 0.09 0.038"/>
            <geometry>
                <box size="0.288 0.012 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.144 -0.09 0.038"/>
            <geometry>
                <box size="0.288 0.012 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.00125 0.11995 0.038"/>
            <geometry>
                <box size="0.0025 0.0479 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.00125 -0.11995 0.038"/>
            <geometry>
                <box size="0.0025 0.0479 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.28675 0.11995 0.038"/>
            <geometry>
                <box size="0.0025 0.0479 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.28675 -0.11995 0.038"/>
            <geometry>
                <box size="0.0025 0.0479 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.144 0.14515 0.038"/>
            <geometry>
                <box size="0.288 0.0025 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <visual>
            <origin xyz="0.144 -0.14515 0.038"/>
            <geometry>
                <box size="0.288 0.0025 0.048"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0.144 0 0.038"/>
            <geometry>
                <box size="0.288 0.2928 0.048"/>
            </geometry>
        </collision>


        <xacro:inertial_box mass="0.5" x="0.288" y="0.2928" z="0.048">
            <origin xyz="0.144 0 0.038" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.096 0.121 0.038" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.038" radius="0.0408">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
    </gazebo>

    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="-0.096 0.121 0.038" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.038" radius="0.0408">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="back_left_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
    </gazebo>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.096 -0.121 0.038" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.038" radius="0.0408">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
    </gazebo>


    
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="-0.096 -0.121 0.038" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.038" length="0.0408"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.038" radius="0.0408">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="back_right_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.0"/>
        <mu2 value="0.0"/>
    </gazebo>

</robot>